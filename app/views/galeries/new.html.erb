<h2>Stwórz galerię</h2>
<%= form_for @galery do |f| %>
  <% if @galery.errors.any? %>
    <div id="error_explanation" >
      <ul>
        <% @galery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, "Nazwa", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", autofocus: true  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Stwórz", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
